block content

  .main-container
    section.pt240.pb240.pt-xs-120.pb-xs-80.overlay.overlay-heavy.image-bg.parallax.cover.fullscreen
      .background-image-holder
        img.background-image(alt="image", src="/assets/images/hero1.jpg")
      .container.v-align-transform
        .row
