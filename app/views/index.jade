            //- a.btn.btn-lg(href="#") View Case Study
          .col-sm-4.col-md-push-2
            img(alt="Pic", src="/assets/images/sections/mic.png")
        // end of row
      // end of container

    section.image-bg.overlay.pt120.pb120.pt-xs-80.pb-xs-80.parallax
      .background-image-holder
        img.background-image(alt="image", src="/assets/images/bg-events.jpg")
      .container
        .row
          .col-md-6
            h5.uppercase
              strong Event Management
            hr.div.div-left
            h4.mb120.mb-xs-80 We worked with multitude of clients to produce concerts and shows.
            //- a.btn.btn-lg.btn-filled(href="#") View Case Study
        // end of row
      // end of container
  
    a#team
    section.pt120.pb120.pt-xs-80.pb-xs-80
      .container
        h5.uppercase.mb0
          strong Passion. Dedication. Determination.
        h1.mb48.mb-xs-32.enddot.raleway.large Our Team

        .team-slider.owl-carousel.owl-theme
          each person in team
            .person.item.image-bg
              .person-img
                img.img-responsive(src="/assets/images/faces/#{person.avatar}", alt="")
                .person-contact
                  .inner.text-white.text-xs-center
                    ul.list-inline.social-list.mb0
                      if person.social.facebook
                        li.list-inline-item
                          a.text-white(href='https://www.facebook.com/#{person.social.facebook}/')
                            span.soc-facebook
                      if person.social.instagram
                        li.list-inline-item
                          a.text-white(href='https://www.instagram.com/#{person.social.instagram}/')
                            span.soc-instagram
                      if person.social.twitter
                        li.list-inline-item
                          a.text-white(href='https://twitter.com/#{person.social.twitter}')
                            span.soc-twitter


                    hr.div.m-t-1.m-b-1
                    a.text-white(href="mailto:#{person.social.email}")!= person.social.email
              .person-info.bg-dark.text-xs-center
                h5.montserrat.uppercase.mb0
                  != person.name
                h6.montserrat.uppercase.fade-half.mb0
                  != person.pos

        // end of row
      // end of container

    a#contact
    section.pt120.pb120.image-bg
