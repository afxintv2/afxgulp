      .container
        .row
          .col-md-5.contact-info.pt16.pb16
            h1.mb32.enddot.raleway Get In Touch
            h4.mb16
              a(href="mailto:info@arteffectsinternational.com") info@arteffectsinternational.com

            h6.uppercase.mb0 Malaysia
            p
              | B-3A-03, Neo Damansara
              | Jalan PJU 8/1, Damansara Perdana, 47820 Petaling Jaya, Selangor, Malaysia
              br
              a(href="callto:+60377271297") +603 7727 1297
              |  &middot; 
              a(href="callto:+60377251297") +603 7725 1297
        // end of row
      // end of container
      
    footer.footer-2.bg-dark
