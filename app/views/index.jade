extends layouts/_default

block vars
  - var pageId = 'index';

block content

  .main-container

    section.cover.fullscreen.p-y-6.overlay.overlay-heavy.image-bg.parallax
      .background-image-holder
        img.background-image(alt="image", src="/assets/images/hero1.jpg")
      .container.v-align-transform
        .row
          .col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.text-xs-center.text-sm-left
            h3.m-b-3.m-b-xs-2
              | Arteffects International is a 
              b digital design collective &#38; production house,
              |  with experiences in 
              b.enddot film scoring, artwork design, and media productions

            a.btn.btn-lg.m-b-1.inner-link(href="#about") Get to know us better
        // end of row
      // end of container
      
    a#about
    section.p-y-8.p-y-xs-4
      .container
        .row
          .col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.text-xs-center
            h3.m-b-3.m-b-xs-2 
              | A media agency founded in 2006 by 
              a(href="//hafizhamidun.com") Hafiz&nbsp;Hamidun
              | , singer-songwriter &amp; music producer, on the  principles of 
              b Classic, Clarity and Intriguing
            p.lead.m-b-0
              | These qualities are things that made us, us. And we are very proud of it. 
        // end of row
      // end of container

    a#work
    section.p-y-0.p-t-xs-4.bg-primary.image-zoom
      .container
        .row
          .col-md-6.m-t-6.m-t-sm-4.m-t-xs-0.m-b-xs-3.text-xs-center.text-sm-left
            h5.uppercase
              strong.enddot-white Music Production
            hr.div.div-left-sm.div-white
            h4.m-b-6.m-b-xs-4 We are passionate with our talents and skills. With music we were able to touch millions. And now we want to do it again. Let's create something together.
            //- a.btn.btn-lg(href="#") View Case Study
          .col-md-4.col-md-offset-2.text-xs-center
            img(alt="", src="/assets/images/sections/mic.png", data-2x="/assets/images/sections/mic_2x.png")
        // end of row
      // end of container

    section.image-bg.overlay.overlay-heavy.p-y-6.p-y-xs-4.parallax
      .background-image-holder
        img.background-image(alt="image", src="/assets/images/bg-events.jpg")
      .container
        .row
          .col-md-6.text-xs-center.text-sm-left
            h5.uppercase
              strong.enddot Event Management
            hr.div.div-left-sm
            h4.m-b-6.m-b-xs-4 We've worked with multitude of clients to produce concerts and shows.
            //- a.btn.btn-lg.btn-filled(href="#") View Case Study
        // end of row
      // end of container

    a#cdnasyid
    section.p-t-5
      .container
        .row.v-align-children
          .col-md-6.text-center.m-b-xs-2
            img(alt="", src="/assets/images/sections/cdnasyid.png", data-2x="/assets/images/sections/cdnasyid_2x.png")
          .col-md-6.text-xs-center.text-sm-left
            h1.m-b-2.m-b-xs-1.enddot.raleway Online Store
            hr.div.div-left-sm.m-b-3

            h6.uppercase.m-b-1 Buy International Islamic albums at your fingertips. 

            h4 CDNasyid.com is a one-stop shop for all most wanted Nasyeed&nbsp;albums.

            a.btn-filled.btn(href="//cdnasyid.com") Go to CDNasyid.com
      // end of row
    // end of container

    include modules/_timeline

    a#team
    section.p-t-6.p-b-4.p-t-xs-4.p-b-xs-0
      .container.text-xs-center.text-sm-left
        .row
          .col-md-6
            h6.uppercase.m-b-0
              strong Passion. Dedication. Determination.
            h1.m-b-3.m-b-xs-2.enddot.raleway.large Our Team

          .col-md-6
            h4.m-b-3 We are a close-knit team. In fact, we are proud to call our group a family.

        .row
          .team-slick
            each person in team
              .person.item
                .person-img
                  img.img-responsive(src="/assets/images/faces/#{person.avatar}", alt="")
                  .person-contact
                    .inner.p-y-2.text-xs-center
                      ul.list-inline.m-b-0
                        if person.social.facebook
                          li.list-inline-item
                            a(href='https://www.facebook.com/#{person.social.facebook}/')
                              span.soc-facebook
                        if person.social.instagram
                          li.list-inline-item
                            a(href='https://www.instagram.com/#{person.social.instagram}/')
                              span.soc-instagram
                        if person.social.twitter
                          li.list-inline-item
                            a(href='https://twitter.com/#{person.social.twitter}')
                              span.soc-twitter
                        if person.social.web
                          li.list-inline-item
                            a(href='#{person.social.web}/')
                              span.ti-home
                        if person.social.email
                          li.list-inline-item
                            a(href="mailto:#{person.social.email}")
                              span.ti-email
                .person-info.p-a-2.text-xs-center
                  h5.uppercase.m-y-0
                    != person.name
                  h6.uppercase.fade-half.m-y-0
                    != person.pos

        // end of row
      // end of container

    a#contact
    section.image-bg.bg-dark.p-y-0
      .map-canvas.hidden-xs-down(
        data-map-zoom="11", 
        data-address="3.166507, 101.408039[nomarker];Neo Damansara, Petaling Jaya",
        data-maps-api-key="AIzaSyCfo_V3gmpPm1WzJEC9p_sRbgvyVbiO83M", data-maps-api-key-2="AIzaSyAVsRr4i3ovR45biSx0DoWRswL1kfdO9ZU")
      .container
        .row
          .col-md-6.contact-info.p-t-6.p-y-4.p-b-xs-3.p-r-2.p-r-xs-1.text-xs-center.text-sm-left
            h5.uppercase.m-b-0
              strong We'd love to hear from you.
            h1.m-b-2.enddot.raleway.large Get In Touch
            hr.div.div-left-sm.m-b-3

            h6.uppercase.m-b-0 Malaysia
            p
              | B-3A-03, Neo Damansara
              br
              | Jalan PJU 8/1, Damansara Perdana,
              br
              | 47820 Petaling Jaya, Selangor, Malaysia
            p
              a(href="callto:+60377271297") +603 7727 1297
              | &nbsp;&nbsp;|&nbsp;&nbsp;
              a(href="callto:+60377251297") +603 7725 1297

            .contact-form.p-t-2
              form.form-email(data-success="Thanks for your submission, we will be in touch shortly.", data-error="Please fill all fields correctly.")
                input.validate-required(type="text", name="name", placeholder="Your Name")
                input.validate-required.validate-email(type="text", name="email", placeholder="Email Address")
                textarea.validate-required(name="message", rows="4", placeholder="Message")
                input(type="text", name="_gotcha", style="display:none")
                button(type="submit") Send Message

        // end of row
      // end of container
      
    footer.footer-2.bg-dark.p-y-6.p-t-xs-0
      .container
        .row
          .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.text-xs-center
            hr.div.m-b-5.hidden-sm-up
            a(href="#")
              img.image-xs.m-b-2.fade-on-hover(alt="Logo", src="/assets/images/afxlogo-white.png", style="height: 64px;")
            h5.fade-1-4 
              | Handcrafted with 
              span.fa.fa-heart.color-primary
              |  at Arteffects International &#169; 2016
            ul.list-inline.social-list.m-b-0
              li.list-inline-item
                a(href='https://www.facebook.com/arteffectsinternational/')
                  span.soc-facebook
              li.list-inline-item
                a(href='https://www.instagram.com/arteffectsint/')
                  span.soc-instagram
              li.list-inline-item
                a(href='https://twitter.com/arteffectsint')
                  span.soc-twitter
              li.list-inline-item
                a(href='https://www.youtube.com/user/ArteffectsSdnBhd')
                  span.soc-youtube
              li.list-inline-item
                a(href='https://vimeo.com/arteffectsinternational')
                  span.soc-vimeo

        // end of row
      // end of container
