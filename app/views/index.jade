      // end of container
      
    a#about
    section.pt180.pb180.pt-xs-80.pb-xs-80
      .container
        .row
          .col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.text-xs-center
            h3.mb40.mb-xs-32 A small media agency founded on the principles of Honesty, Clarity, Simplicity.
            p.lead.mb0
              | These qualities is what made us, us. And we are proud of it. 
        // end of row
      // end of container
      
    a#work
    section.pt0.pb0.pt-xs-80.bg-primary.image-zoom
      .container
        .row
          .col-md-5.col-sm-6.mt104.mt-sm-80.mt-xs-0.mb-xs-40
            h5.uppercase
              strong Music Production
            hr.div.div-left.div-white
